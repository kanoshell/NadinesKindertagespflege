<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_neues_kind"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.daheim.nadineskindertagespflege.actNeuesKind">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:id="@+id/Name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Vorname"
        android:id="@+id/Vorname"
        android:layout_below="@+id/Name"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/Geburtstag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Vorname"
        android:ems="10"
        android:hint="Geburtstag"
        android:inputType="date" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/gebtagcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Vorname"
        android:layout_toEndOf="@+id/Geburtstag"
        android:layout_toRightOf="@+id/Geburtstag"
        android:clickable="true"
        android:focusable="true"
        android:src="@android:drawable/ic_menu_my_calendar"
        app:backgroundTint="@android:color/holo_blue_light"
        app:fabSize="mini"
        android:onClick="setGebTagDatum"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:hint="Allergien"
        android:layout_below="@+id/Geburtstag"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Allergien" />

    <CheckBox
        android:id="@+id/Aktiv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/übernehmen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp"
        android:text="Aktiv?" />

    <Button
        android:id="@+id/übernehmen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="88dp"
        android:onClick="kindInDb"
        android:text="übernehmen" />

    <EditText
        android:id="@+id/lzstarttxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/Allergien"
        android:ems="10"
        android:hint="Laufzeitanfang"
        android:inputType="date" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/lzstartcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Allergien"
        android:layout_toEndOf="@+id/lzstarttxt"
        android:layout_toRightOf="@+id/lzstarttxt"
        android:clickable="true"
        android:focusable="true"
        android:src="@android:drawable/ic_menu_my_calendar"
        app:backgroundTint="@android:color/holo_green_light"
        app:fabSize="mini"
        android:onClick="setLZStartDatum"/>

    <EditText
        android:id="@+id/lzendetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lzstarttxt"
        android:ems="10"
        android:hint="Laufzeitende"
        android:inputType="date" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/lzendecal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lzstarttxt"
        android:layout_toEndOf="@+id/lzstarttxt"
        android:layout_toRightOf="@+id/lzstarttxt"
        android:clickable="true"
        android:focusable="true"
        android:src="@android:drawable/ic_menu_my_calendar"
        app:backgroundTint="@android:color/holo_red_light"
        app:fabSize="mini"
        android:onClick="setLZEndeDatum"/>


</RelativeLayout>
